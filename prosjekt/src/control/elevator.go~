package control

import (
	"llist"
	"strconv"
	"net"
	."driver"
	)


type Elevator struct {
	id int
	stopList util.LinkedList
	//speed int
	direction int
	currentFloor int
	//out chan string
}

func findElevID() int {
	addrs, _ := net.InterfaceAddrs()
	for _, address := range addrs {
        if ipnet, ok := address.(*net.IPNet); ok && !ipnet.IP.IsLoopback() {
            if ipnet.IP.To4() != nil {
                IDstr := ipnet.IP.String()
                IDstr = IDstr[12:]
                ID, _ := strconv.Atoi(IDstr)
                return ID
            }
        }
    }
    return 0
}

func InitElevator() *Elevator {

	if Elev_init() == 0 {
		Println("Could not initialize elevator")
	}
		
	Elev_set_stop_lamp(1)
	
	e := new(Elevator)
	e.id = findElevID()
	e.stopList = llist.New()
	
	if Elev_get_floor_signal() == -1 {
		Elev_set_speed(-300)
		for Elev_get_floor_sensor_signal() == -1 {}
	}
	
	Elev_set_speed(0)
	e.currentFloor = Elev_get_floor_sensor_signal()
	
